        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.measure_spec.MeasureSpecActivity" />
        <activity android:name=".main.card_views.CardPagerActivity" />
        <activity
            android:name=".main.card_views.TinderActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".main.wangyiyun.WangyiyunActivity" />
        <activity android:name=".main.Text.TextChangeActivity" />
        <activity android:name=".main.SwitchButton.SwitchActivity" />
        <activity android:name=".main.nest.LuxuryPriceActivity" />
        <activity android:name=".main.mutifinger.MutiFlingersActivity" />
        <activity android:name=".main.line.LinePointViewActvity" />
        <activity
            android:name=".main.brodercast.HooliganActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|navigation|keyboard"
            android:excludeFromRecents="true"
            android:exported="false"
            android:finishOnTaskLaunch="false"
            android:launchMode="singleInstance"
            android:theme="@style/HooliganActivityStyle" />
        <activity android:name=".main.kotlin.FirstKotlinActivity" />
    </application>

</manifest>